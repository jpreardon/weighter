<%= form_for(@weight) do |f| %>
  <div class="form-group">
    <%= f.label :date %>
    <% if @weight.date %>
      <span class="form-control" readonly><%= formatDate(@weight.date) %> </span>
    <% else %>
      <%= f.date_field :date, value:DateTime.now.to_date, class: "form-control" %>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= f.label :weight %>
    <%= f.number_field :weight, step: :any, class: "form-control" %>
  </div>
  
  <%= link_to t("cancel"), yield(:cancel_path), class: "btn btn-outline-secondary"  %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>