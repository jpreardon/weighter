<% provide(:title, "Weights") %>
<div class="row">
  <div class="col-sm">
    <h1>All Weights</h1>
  </div>
</div>
<div class="row mb-3">
  <div class="col-sm">
    <%= link_to "Add new weight", new_weight_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="row">
  <div class="col-sm">
    <table class="table table-hover table-sm">
        <thead>
          <tr>
            <th scope="col">Date</th>
            <th scope="col">Weight</th>
          </tr>
        </thead>
        <tbody>
          <% @weights.each do | weight | %>
            <tr>
              <th scope="row"><%= link_to formatDate(weight.date), weight %></th>
              <td><%= weight.weight %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>






